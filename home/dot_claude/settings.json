{
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "Glob",
      "Grep",
      "LS",
      "MultiEdit",
      "NotebookEdit",
      "NotebookRead",
      "Read",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Write"
    ],
    "deny": [
      "Bash(rm*)"
    ],
    "ask": [],
    "defaultMode": "acceptEdits"
  },
  "model": "opusplan",
  "statusLine": {
    "type": "command",
    "command": "STATUSLINE_REALTIME=1 bash ~/.claude/statusline-enhanced.sh"
  }
}