// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "theme": "One Dark",
  "base_keymap": "SublimeText",
  "vim_mode": true,
  "autosave": "on_focus_change",
  "buffer_font_size": 16.5,
  "buffer_font_family": "IosevkaTerm Nerd Font Propo",
  "buffer_line_height": { "custom": 1.25 },
  "buffer_font_features": { "calt": false, "clig": false, "liga": false },
  "ui_font_size": 16.5,
  "ui_font_family": "IosevkaTerm Nerd Font Propo",
  "ui_font_features": { "calt": false, "clig": false, "liga": false },
  "terminal": {
    "font_size": 16.5,
    "font_family": "IosevkaTerm Nerd Font Propo",
    "line_height": { "custom": 1.25 },
    "font_features": { "calt": false, "clig": false, "liga": false }
  },
  "file_icons": true,
  "git_status": true,
  "tab_size": 2,
  "inlay_hints": {
    "enabled": true
  },
  "project_panel": {
    "dock": "right"
  },
  "show_completions_on_input": true
}
